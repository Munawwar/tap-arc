{
	"name": "tap-spek",
	"description": "spec-like TAP reporter",
	"author": "tbeseda",
	"version": "0.0.5",
	"license": "ISC",
	"main": "index.js",
	"bin": {
		"tap-spek": "bin/tap-spek"
	},
	"files": [
		"index.js",
		"bin/tap-spek"
	],
	"repository": "tbeseda/tap-spek",
	"keywords": [
		"test",
		"tap",
		"spec",
		"tap-spec",
		"tape",
		"reporter"
	],
	"scripts": {
		"lint": "prettier --write .",
		"test": ":",
		"tape:mixed": "tape test/create-mixed-tap.js",
		"tape:pass": "tape test/create-passing-tap.js",
		"try:pass": "npm run --silent tape:pass | bin/tap-spek",
		"try": "npm run --silent tape:mixed | bin/tap-spek"
	},
	"dependencies": {
		"diff": "^5.0.0",
		"duplexify": "^4.1.2",
		"picocolors": "^1.0.0",
		"tap-parser": "^10.1.0",
		"through2": "^4.0.2"
	},
	"devDependencies": {
		"@types/duplexify": "^3.6.0",
		"@types/node": "^16.11.6",
		"prettier": "^2.4.1",
		"tape": "^5.3.1"
	},
	"prettier": {
		"tabWidth": 2,
		"useTabs": true,
		"printWidth": 100
	}
}
