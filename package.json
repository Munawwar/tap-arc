{
	"name": "tap-spek",
	"description": "spec-like TAP reporter",
	"author": "tbeseda",
	"version": "0.0.7",
	"license": "ISC",
	"main": "index.js",
	"bin": {
		"tap-spek": "bin/tap-spek"
	},
	"files": [
		"index.js",
		"bin/tap-spek"
	],
	"repository": "tbeseda/tap-spek",
	"keywords": [
		"test",
		"tap",
		"spec",
		"tap-spec",
		"tape",
		"reporter"
	],
	"scripts": {
		"lint": "prettier --write .",
		"snap:mixed": "npm run --silent spek:mixed > test/snapshots/mixed.txt",
		"snap:object": "npm run --silent spek:object > test/snapshots/object.txt",
		"snap:passing": "npm run --silent spek:passing > test/snapshots/passing.txt",
		"snap:simple": "npm run --silent spek:simple > test/snapshots/simple.txt",
		"spek:mixed": "npm run --silent tape:mixed | bin/tap-spek",
		"spek:object": "npm run --silent tape:object | bin/tap-spek",
		"spek:passing": "npm run --silent tape:passing | bin/tap-spek",
		"spek:simple": "npm run --silent tape:simple | bin/tap-spek",
		"spek:slow": "npm run --silent tape:slow | bin/tap-spek",
		"tape:mixed": "tape test/create-mixed-tap.js",
		"tape:object": "tape test/create-object-tap.js",
		"tape:passing": "tape test/create-passing-tap.js",
		"tape:simple": "tape test/create-simple-tap.js",
		"tape:slow": "tape test/create-slow-tap.js",
		"test": "tape test/index.js | bin/tap-spek"
	},
	"dependencies": {
		"diff": "^5.0.0",
		"duplexify": "^4.1.2",
		"picocolors": "^1.0.0",
		"tap-parser": "^10.1.0",
		"through2": "^4.0.2"
	},
	"devDependencies": {
		"@types/duplexify": "^3.6.0",
		"@types/node": "^16.11.6",
		"prettier": "^2.4.1",
		"tape": "^5.3.1"
	},
	"prettier": {
		"tabWidth": 2,
		"useTabs": true,
		"printWidth": 100
	}
}
